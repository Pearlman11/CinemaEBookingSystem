package com.SWE.service;

import org.springframework.stereotype.Service;
import org.springframework.web.reactive.function.client.WebClient;

@Service
public class YouTubeService {

    private final String API_KEY = "AIzaSyBTGBDxz483M8XVY8Er0m_BbWZhtnRktMc";
    private final WebClient webClient;

    public YouTubeService(WebClient.Builder webClientBuilder) {
        this.webClient = webClientBuilder.baseUrl("https://www.googleapis.com/youtube/v3").build();
    }

    public String searchTrailer(String title) {
        String youtubeApiUrl = "/search?part=snippet&q=" + title + " trailer&type=video&key=" + API_KEY;

        // Use WebClient to make a GET request to the YouTube API
        return this.webClient.get()
                .uri(youtubeApiUrl)
                .retrieve()
                .bodyToMono(String.class)
                .block(); // Consider using a reactive approach rather than blocking
    }
}
